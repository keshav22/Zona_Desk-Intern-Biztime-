<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keshav.zonal_desk.MainActivity"
    android:id="@+id/drawerLayout">


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header">

    </android.support.design.widget.NavigationView>
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="600dp"
        android:id="@+id/rl"
        android:background="@drawable/home"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/gd1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back321"
            app:srcCompat="@drawable/iacademia2"
            android:layout_alignLeft="@+id/gd1"
            android:layout_alignStart="@+id/gd1"
            android:layout_below="@+id/gd1" />
        </ScrollView>
        <GridLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gd1"
            android:splitMotionEvents="true"
            android:rowCount="3"
            android:columnCount="3"
            android:layout_marginRight="3dp"

            >

            <Button
                android:onClick="buttonclick"
                android:id="@+id/button6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button"


                />

            <Button
                android:onClick="buttonclick"
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/button"


                />

        <Button

            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button"
            android:onClick="buttonclick"
            android:background="@drawable/button"
             />

            <Button
                android:onClick="buttonclick"
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/button"
             />

        <Button
            android:onClick="buttonclick"
            android:id="@+id/button8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button"

             />

        <Button
            android:onClick="buttonclick"
            android:id="@+id/button12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button"
             />


        <Button
            android:onClick="buttonclick"
            android:id="@+id/button11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/button10"
            android:layout_alignStart="@+id/button10"
            android:layout_alignTop="@+id/button9"
            android:background="@drawable/button"
             />

        <Button
            android:onClick="buttonclick"
            android:id="@+id/button10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button"
             />

        <Button
            android:onClick="buttonclick"
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/button"

             />
        </GridLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gd1"
            android:layout_marginTop="21dp"
            android:background="@drawable/ntitled87"
            android:text="Submit"
            android:textSize="30sp"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
